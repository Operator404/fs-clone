<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:Class="FSClient.UWP.Shared.Views.Themes.Brushes">

  <SolidColorBrush x:Key="TopBarBackgroundBrush"
                   Color="{ThemeResource SystemAccentColor}" />

  <SolidColorBrush x:Key="BottomBarBackgroundBrush"
                   Color="{StaticResource SystemChromeMediumColor}" />

  <SolidColorBrush x:Key="ClientBackgroundBrush"
