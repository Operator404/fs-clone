                     TintColor="{StaticResource SystemChromeMediumColor}"
                     FallbackColor="{StaticResource SystemChromeMediumColor}" />-->

  <SolidColorBrush x:Key="PaneBackgroundBrush"
                   Color="{StaticResource SystemChromeMediumColor}" />

  <!--<muxm:AcrylicBrush x:Key="PlayerBackgroundBrush"
                     BackgroundSource="Backdrop"
                     TintOpacity="0.6"
                     Opacity="0.6"
                     TintColor="{StaticResource SystemAltMediumColor}"
                     FallbackColor="{StaticResource SystemAltMediumColor}" />-->

  <SolidColorBrush x:Key="PlayerBackgroundBrush"
